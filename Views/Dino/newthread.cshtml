@model SaurianSource.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset='utf-8'>
    <title>Saurian Source</title>
    <!-- include libraries(jQuery, bootstrap) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
    <div class = "threads-header-area">
        <h1><a href = "/threads">Saurian Source</a></h1>
        <h2>Creating new thread</h2>
    </div>

    <div class = "user-info-area">
        <h1>@Model.Name</h1>
        <form action = "/logout" method = "post">
            <input type = "hidden" name = "userId" value = "@Model.UserId" />
            <button>Logout</button>
        </form>
    </div>

    <div class = "create-thread-area">

        @{
            @if (@ViewBag.Error != null)
            {
                <div class = "error-box">
                    <span>@ViewBag.Error</span>
                </div>
            }
        }

        <form action = "/newthread" method = "post">
            <label for = "thread-title">Thread Title:</label>
            <input type = "text" name = "threadTitle" id = "thread-title" />
            <h4>Enter thread text here:</h4>
            <textarea id="summernote" name="newTextBody"></textarea>
            <button>Submit</button>
        </form>
    </div>

    <script>
        $(document).ready(function() {
            $('#summernote').summernote();
        });
    </script>
</body>
</html>